<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Address">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Address"
        android:textSize="24sp"
        android:textColor="@color/black"></TextView>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Line 1:"
            android:textSize="16sp"
            android:textColor="@color/black"></TextView>
        <EditText
            android:id="@+id/add1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under"
            android:padding="7dp"
            android:hint="Street address, P.O,company name,c/o"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Line 2:"
            android:textSize="16sp"
            android:textColor="@color/black"></TextView>
        <EditText
            android:id="@+id/add2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under"
            android:padding="7dp"
            android:hint="Apartment,suite,unit,building,floor,etc."></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City:"
            android:textSize="16sp"
            android:textColor="@color/black"></TextView>
        <EditText
            android:id="@+id/add3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under"
            android:padding="7dp"
            android:hint="Enter city"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State/Province/Region:"
            android:textSize="16sp"
            android:textColor="@color/black"></TextView>
        <EditText
            android:id="@+id/add4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under"
            android:padding="7dp"
            android:hint="Enter State"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin Code:"
            android:textSize="16sp"
            android:textColor="@color/black"></TextView>
        <EditText
            android:id="@+id/add5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under"
            android:padding="7dp"
            android:hint="Enter Pincode"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:"
            android:textSize="16sp"
            android:textColor="@color/black"></TextView>
        <EditText
            android:id="@+id/add6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/under"
            android:padding="7dp"
            android:hint="Enter Country"></EditText>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="DONE"
            android:id="@+id/done"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            android:padding="5dp"
            android:orientation="horizontal">
            <Button
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_outline_location_on_24"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select from map"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/otheradd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_add_24"
                android:layout_marginLeft="128dp"></Button>
        </LinearLayout>
        <TextView
            android:padding="7dp"
            android:hint="Your Address"
            android:textColor="@color/black"
            android:background="@drawable/under"
            android:id="@+id/getother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"></TextView>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/set"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SET FROM MAP"
            android:padding="5dp"></Button>
    </LinearLayout>

</LinearLayout>